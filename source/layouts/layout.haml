!!! 5
%html
  %head
    %meta{charset: "utf-8"}
    %title
      = current_page.data.title || "Primates selection"
    = stylesheet_link_tag "normalize", "common", "simplegrid"
    - if current_page.data.cssfiles != nil then
      - if current_page.data.cssfiles.instance_of?(Array) then
        - current_page.data.cssfiles.each do |css|
          = stylesheet_link_tag css
      - else
        = stylesheet_link_tag current_page.data.cssfiles
    = javascript_include_tag "jquery-3.2.1.min"
    = javascript_include_tag "all"
    - if current_page.data.jsfiles != nil then
      - if current_page.data.jsfiles.instance_of?(Array) then
        - current_page.data.jsfiles.each do |js|
          = javascript_include_tag js
      - else
        = javascript_include_tag current_page.data.jsfiles
    :javascript
      window.twttr = (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function(f) {
          t._e.push(f);
        };

        return t;
      }(document, "script", "twitter-wjs"));
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-60474375-1', 'auto');
      ga('send', 'pageview');
  %body
    .container
      .headerbackground
        %header
          .sitetitle
            = link_to '/index.html' do
              Primates selection
        .globalmenu
          = partial 'globalmenu', :locals => {:current => current_page.data.current}
      .grid.grid-pad.bodybackground
        .col-1-1
          %article.content
            - if current_page.data.doctype == 'novel' then
              = partial 'taglist', :locals => {:tagArray => current_page.data.tags, :linkPage => '/novels/indexbytag.html'}
            - if current_page.data.doctype == 'word' then
              = partial 'taglist', :locals => {:tagArray => current_page.data.tags, :linkPage => '/words/indexbytag.html'}
            = yield
            = partial 'tweetbutton'

      .footerbackground
        %footer
          Copyright &copy;
          = Date.today.strftime("%Y")
          Syuji, &copy;
          = Date.today.strftime("%Y")
          Vestalis Quintet
