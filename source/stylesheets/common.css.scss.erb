@charset "utf-8";
body {
	font: 100%/1.4 "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", "メイリオ", Meiryo, Osaka, "ＭＳ Ｐゴシック", "MS P Gothic", sans-serif;
	background-color: #FFFFFF;
	margin: 0;
	padding: 0;
	color: #000;
}

html,body {
  height: 100%;
}
body {
	background-image: url("/images/gravel-296357_960_720.jpg");
}

.container {
	height: 100%;
	min-height: 100%;
	margin: 0 auto;
}

.bodybackground {
	background-color: #F5FFF5;
	border-left: solid 1px #DDD;
	border-right: solid 1px #DDD;
}

header {
	height:90px;
}

.headerbackground {
	background-color: #FFFFCC;
	border-left: solid 1px #DDD;
	border-right: solid 1px #DDD;
}

footer {
	width: 100%;
	padding: 15px;
}

.footerbackground {
	border-top: solid 1px #EEEECC;
	border-left: solid 1px #DDD;
	border-right: solid 1px #DDD;
	background-color: #FFFFCC;
}

.content {
	display: block;
	padding: 20px;
	/* 記事 */
	.section {
		border: solid 1px #CCF;
		margin-bottom: 15px;
		border-radius: 8px;
		p {
			margin: 0;
		}
		.topic {
			background:#FFFAE4 ;
			padding: 15px;
			border-radius: 0 0 8px 8px;
			p {
				margin-bottom: 10px;
			}
		}
		.bg_pink {
			background: #FF99CC;
		}
		.mature_tag {
			color: #FF55BB;
		}
		h2.bg_pink {
			background: #FF55BB;
		}
		h1, h2 {
			padding: 10px;
			margin: 0;
			background:#E4F8FF ;
			display: block;
			border-radius: 8px 8px 0 0;
		}
	}
	.section.updates {
		.topic {
			height: 10em;
			overflow-y: scroll;
			overflow-x: auto;

			dd {
				margin-bottom: 10px;
			}
		}
	}
}

body > .container {
	height: auto;
}

.sidebar {
	width: 100%;
	height :100%;
	ul {
		padding: 0;
		margin: 0;
		li {
			height: 50px;
			list-style: none;
			background-color: #CCCCDD;
			border-top: 5px solid #DDDDEE;
			border-right: 5px solid #DDDDEE;
			border-left: 5px solid #AAC;
			border-bottom: 5px solid #AAC;
			a {
				display: block;
				width: 100%;
				height: 100%;
				text-decoration: none;
				color: #333;
				span.LinkLabel {
					display: block;
					padding-left: 0.5em;
					padding-top: 0.5em;
				}
			}
		}
		li.Current {
			background-color: #ffd8d1;
			border-top: 5px solid #ffe8e1;
			border-right: 5px solid #ffe8e1;
			border-left: 5px solid #CAA;
			border-bottom: 5px solid #CAA;
		}
	}
}

.tagList {
	font-size: 83%;
}

.align_left {
	text-align: left;
}
.align_center {
	text-align: center;
}
.align_right {
	text-align: right;;
}
