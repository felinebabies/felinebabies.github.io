@charset "utf-8";
body {
	font: 100%/1.4 "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", "メイリオ", Meiryo, Osaka, "ＭＳ Ｐゴシック", "MS P Gothic", sans-serif;
	background-color: #FFFFFF;
	margin: 0;
	padding: 0;
	color: #000;
}

html,body {
  height: 100%;
}

.container {
	width: 960px;
	height: 100%;
	min-height: 100%;
	margin: 0 auto;
}

header {
	height:90px;
	background-color: #FFFFCC
}

footer {
	width: 930px;
	height: 20px;
	float: right;
	background-color: #FFFFCC;
	padding: 15px;
	border-top: solid 1px #EEEECC;
}

.content {
	background-color: #F5FFF5;
	width: 710px;
	display: block;
	float: right;
	padding: 20px;
	/* 記事 */
	.section {
		p {
			margin: 0;
		}
		.topic {
			background:#FFFAE4 ;
			margin-bottom: 15px;
			padding: 15px;
		}
		.bg_pink {
			background: #FF99CC;
		}
		h1, h2 {
			padding: 10px;
			margin: 0;
			background:#E4F8FF ;
			display: block;
		}
	}
}

body > .container {
	height: auto;
}

.sidebar {
	float: left;
  width :210px;
	height :100%;
	background-color: #CCCCDD;
	ul {
		padding: 0;
		margin: 0;
		.FirstItem {
			border-top: none;
		}
		li {
			width: 210px;
			height: 50px;
			list-style: none;
			border-top: solid 1px #333;
			a {
				display: block;
				width: 100%;
				height: 100%;
				text-decoration: none;
				color: #333;
				span.LinkLabel {
					display: block;
					padding-left: 15px;
					padding-top:15px;
				}
			}
		}
		li.Current {
			background-color: #ffd8d1;
		}
	}
}

.tagList {
	font-size: 83%;
}
